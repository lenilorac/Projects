class Bar
{
  int length;
  int gap=10;
  float xAxis = 550;
  float yLocation;
  float xLocation;
  
  Bar(int length, int xAxisY, int yAxisX, int gap)
  {
    this.length = length;
    xLocation = yAxisX + gap;
    yLocation = xAxisY - (length/2);
    this.gap = gap;
  }
  
  void draw()
  {
    fill(greenish);
    rect(xLocation, yLocation, WIDTH_OF_BAR, length/2);
  }
}